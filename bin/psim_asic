#!/bin/bash

app=$1
log=$2

outDir=$PLASTISIM_HOME/configs/gen/${app}_asic/
config=${outDir}/config.psim

[ -e $config ] && rm $config

export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --debug \
  --mapping=true \
  --load-pir=true \
  --save-pir=false \
  --net=asic \
  --psim=true \
  --psim_out=$outDir \
  --run-psim=true \
  --trace=false \
  --ctrl=true \
  --bp=false \
  --stat=false \
  --arch=MyDesign \
  --row=16 --col=8 \
  --argin=64 \
  --tokenout=32 \
  > $log 2>&1 

echo "-------------PASS (DONE)------------" >> $log
