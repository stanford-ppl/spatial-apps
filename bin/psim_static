#!/bin/bash

app=$1
log=$2

outDir=$PIR_HOME/out/${app}_static/
config=${outDir}/config.psim

[ -e $config ] && rm $config

mkdir -p $(dirname $log)
export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --out=$outDir \
  --debug \
  --mapping=true \
  --load-pir=false \
  --save-pir=false \
  --net=static \
  --psim=true \
  --psim-out=$outDir \
  --run-psim=true \
  --trace=false \
  --ctrl=true \
  --bp=false \
  --stat=false \
  --arch=MyDesign \
  --row=16 --col=8 \
  --argin=64 \
  --tokenout=32 \
  > $log 2>&1 

echo "-------------PASS (DONE)------------" >> $log
