#!/bin/bash

app=$1

outDir=$PIR_HOME/out/${app}_static/
config=${outDir}/config.psim

[ -e $config ] && rm $config
export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --out=$outDir \
  --debug \
  --mapping=true \
  --load-pir=false \
  --save-pir=false \
  --net=static \
  --psim=true \
  --psim-out=$outDir \
  --run-psim=false \
  --trace=true \
  --ctrl=true \
  --bp=false \
  --stat=false \
  --arch=MyDesign \
  --row=16 --col=8 \
  --topo=mesh \
  --argin=64 \
  --tokenout=32 \
  --vfifo=4 \
  --fifo-depth=20

$PLASTISIM_HOME/plastisim -f $config

echo "-------------PASS (DONE)------------"
