#!/bin/bash

app=$1

outDir=$PIR_HOME/out/${app}_p2p
config=${outDir}/config.psim

[ -e $config ] && rm $config
export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --out=$outDir \
  --debug \
  --mapping=true \
  --load-pir=false \
  --save-pir=false \
  --net=p2p \
  --psim=true \
  --psim-out=$outDir \
  --run-psim=true \
  --trace=true \
  --ctrl=true \
  --bp=false \
  --stat=true \
  --arch=MyDesign \
  --row=16 --col=8 \
  --argin=64 \
  --tokenout=32 \
  --vfifo=4 \
  --fifo-depth=20

echo "-------------PASS (DONE)------------"
