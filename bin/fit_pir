#!/bin/bash

app=$1

outDir=$PIR_HOME/out/${app}

export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --out=$outDir \
  --debug \
  --mapping=false \
  --load-pir=false \
  --save-pir=true \
  --dot=false \
  --psim=false \
  --ctrl=true \
  --bp=false \
  --stat=true \
  --arch=MyDesign \
  --net=p2p \
  --topo=mesh \
  --row=16 --col=8 \
  --argin=64 \
  --tokenout=32 \
  --vfifo=4

echo "-------------PASS (DONE)------------"
