#!/bin/bash

app=$1
log=$2

mkdir -p $(dirname $log)
export _JAVA_OPTIONS="-Xss8192k" 
$PIR_HOME/bin/pir $app \
  --debug \
  --mapping=false \
  --load-pir=false \
  --save-pir=true \
  --dot=false \
  --psim=false \
  --ctrl=true \
  --bp=false \
  --stat=true \
  --arch=MyDesign \
  --net=dynamic \
  --topo=mesh \
  --row=16 --col=8 \
  --argin=64 \
  --tokenout=32 \
  > $log 2>&1 

echo "-------------PASS (DONE)------------" >> $log
